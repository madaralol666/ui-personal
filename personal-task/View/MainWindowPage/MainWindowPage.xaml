<Page x:Class="personal_task.View.MainWindowPage.MainWindowPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:personal_task.View.MainWindowPage"
      mc:Ignorable="d"
      d:DesignHeight="600" 
      d:DesignWidth="1000"
      FontFamily="Consolas"
      Title="MainWindowPage">

    <Grid>
        <Border
            Width="1000"
            Height="600"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            CornerRadius="25"
            Effect="{StaticResource MaterialDesignElevationShadow12}">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF81D2E8"/>
                    <GradientStop Color="#FF00CAFF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="450"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Button x:Name="BtnClose"
                        VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Margin="0 15 15 0"
                            Padding="0"
                            Click="BtnClose_Click"
                            Style="{StaticResource MaterialDesignIconButton}">
                        <materialDesign:PackIcon Kind="Power"
                                                 Width="30"
                                                 Height="30"
                                                 Foreground="White"/>
                    </Button>
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 15 0 0">
                            <materialDesign:PackIcon Kind="UserOutline"
                                                     Margin="15 16 -10 0"
                                                     Padding="0"
                                                     Width="30"
                                                     Height="30"
                                                     Foreground="{Binding ElementName=TBRole, Path=Foreground}"/>
                            <TextBlock
                                Padding="0"
                            x:Name="TBRole"
                            Margin="15 15 0 0"
                            FontSize="25"
                            Foreground="white"
                            Text="учитель"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 -15 0 0">
                            <materialDesign:PackIcon Kind="ConfirmationNumberOutline"
                                                     Margin="15 16 -10 0"
                                                     Padding="0"
                                                     Width="30"
                                                     Height="30"
                                                     Foreground="{Binding ElementName=TBRole, Path=Foreground}"/>
                            <TextBlock
                            x:Name="TBID"
                            Foreground="{Binding ElementName=TBRole, Path=Foreground}"
                            Margin="15 15 0 0"
                            FontSize="25"
                            Text="@персональный ID"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 -15 0 0">
                            <materialDesign:PackIcon Kind="DateRange"
                                                     Margin="15 16 -10 0"
                                                     Padding="0"
                                                     Width="30"
                                                     Height="30"
                                                     Foreground="{Binding ElementName=TBRole, Path=Foreground}"/>
                            <TextBlock
                            x:Name="TBInfo"
                            Margin="15 15 0 0"
                            Foreground="{Binding ElementName=TBRole, Path=Foreground}"
                            FontSize="25"
                            Text="Main info"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>
